<?xml version="1.0" encoding="utf-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../schema/config.xsd">

    <elements>
        <element scope="local" required="true" type="text">
            <label lang="de">Mein textfeld</label>
            <label lang="en">My Textfield</label>
            <value>Some default value</value>
            <description lang="de">Meine Feld Beschreibung</description>
            <description lang="en">My Field description</description>
        </element>

        <element scope="local"  type="select">
            <label lang="de">Meine Selektion</label>
            <label lang="en">My Selection</label>
            <value>1</value>
            <description lang="de">Meine Feld Beschreibung</description>
            <description lang="en">My Field description</description>
            <store>
                <![CDATA[
array(
    array(1, 'Testvariable 1'),
    array(2, 'Testvariable 2'),
    array(3, 'Testvariable 3')
)
                ]]>
            </store>
        </element>
    </elements>
</config>
